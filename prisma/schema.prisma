generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id   String @id @default(uuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  coverImage      String?
  profileImage    String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
 
  invoices Invoice[]
}

model Invoice {
 id   String @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  issueDate   DateTime
  items       Item[]
  street   String
  city     String
  postCode String
  state  String
  toEmail String
  toName String
  toStreet   String
  toCity     String
  toPostCode String
  toState  String
  paid Boolean? @default(false)

  user User @relation(fields: [userId], references: [id])
  userId String
}



model Item {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  price     Float
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId String
}
